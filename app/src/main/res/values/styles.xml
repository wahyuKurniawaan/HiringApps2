<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>
    
    <style name="SpinnerToolbar" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorTextIcons</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="spinnerDropDownItemStyle">@color/colorTextIcons</item>
        <item name="android:spinnerItemStyle">@style/SpinnerToolbar</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorTextIcons</item>
    </style>

</resources>